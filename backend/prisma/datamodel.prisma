type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  name: String!
  categories: [Category!]! #relation
  days: [Day!]!
}

type Category {
  id: ID! @unique
  name: String!
  user: User! #relation
}

type Session {
  id: ID! @unique
  category: Category! #relation
  length: Int!
  user: User!
  createdAt: DateTime
}

type Day {
  id: ID! @unique
  date: DateTime!
  user: User!
  sessions: [Session!]!
  rating: Int
  description: String
  taskForTomorrow: String
}
