type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  name: String!
  categories: [Category!]! #relation User to Category
  days: [Day!]!
}

type Category {
  id: ID! @unique
  name: String!
  user: User! #relation Category to User
}

type Session {
  id: ID! @unique
  category: Category! #relation Session to Category
  length: Int!
  user: User!
  createdAt: DateTime!
}

type Day {
  id: ID! @unique
  date: DateTime!
  user: User!
  sessions: [Session!]! #relation Day to Session
  rating: Int
  description: String
  taskForTomorrow: String
}
